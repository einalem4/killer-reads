<section class="post-wrapper">
    <article class="post">
        <div class="post-info">
            <div class="book-info">
                <a href="/post/{{id}}">
                    <h3>Book Title</h3>
                    <h4>by author</h4>
                </a> 
            </div>
            
            <a href="/genre/{{id}}">
                <h4>genre</h4>
            </a>
        </div>    

        <div class="post-meta">
            <p>
                Created by {{user.username}} on {{format_date created at}} | <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
            </p>    
        </div>
    </article>
    {{!-- {{> post-info post }}

    {{#if loggedIn}}
    <form class="comment-form">
      <div>
        <textarea name="comment-body"></textarea>
      </div>

      <div>
        <button type="submit">add comment</button>
      </div>
    </form>
    {{/if}}

    {{> comments post.comments}} --}}
</section>


{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
{{/if}}